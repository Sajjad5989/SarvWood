<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_dp_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_very_very_very_huge"
                android:padding="@dimen/dimen_dp_tiny">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_profile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dimen_dp_very_very_huge"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_dp_medium"
                    android:fontFamily="@font/iran_sans_medium"
                    android:text="ویرایش اطلاعات کاربری"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimen_sp_small"
                    app:layout_constraintRight_toLeftOf="@id/image_profile"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_very_large"
                android:padding="@dimen/dimen_dp_tiny">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_about_us"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dimen_dp_very_very_huge"
                    android:src="@drawable/ic_info_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_dp_medium"
                    android:fontFamily="@font/iran_sans_medium"
                    android:textColor="@color/colorBlack"
                    android:text="درباره ما"
                    android:textSize="@dimen/dimen_sp_small"
                    app:layout_constraintRight_toLeftOf="@id/image_about_us"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_very_large"
                android:padding="@dimen/dimen_dp_tiny">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_contact_us"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dimen_dp_very_very_huge"
                    android:src="@drawable/ic_call_us"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_dp_medium"
                    android:fontFamily="@font/iran_sans_medium"
                    android:textColor="@color/colorBlack"
                    android:text="تماس با ما"
                    android:textSize="@dimen/dimen_sp_small"
                    app:layout_constraintRight_toLeftOf="@id/image_contact_us"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_very_large"
                android:padding="@dimen/dimen_dp_tiny">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_suggest"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dimen_dp_very_very_huge"
                    android:src="@drawable/ic_call_us"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_suggest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_dp_medium"
                    android:fontFamily="@font/iran_sans_medium"
                    android:textColor="@color/colorBlack"
                    android:text="ثبت انتقاد، پیشنهاد، نظر"
                    android:textSize="@dimen/dimen_sp_small"
                    app:layout_constraintRight_toLeftOf="@id/image_suggest"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_very_large"
                android:padding="@dimen/dimen_dp_tiny">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_follow_us"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dimen_dp_very_very_huge"
                    android:src="@drawable/ic_follow_us"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_follow_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_dp_medium"
                    android:fontFamily="@font/iran_sans_medium"
                    android:textColor="@color/colorBlack"
                    android:text="ما را در شبکه های اجتماعی دنبال کنید"
                    android:textSize="@dimen/dimen_sp_small"
                    app:layout_constraintRight_toLeftOf="@id/image_follow_us"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_very_large"
                android:padding="@dimen/dimen_dp_tiny">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_about_team"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dimen_dp_very_very_huge"
                    android:src="@drawable/ic_follow_us"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_about_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_dp_medium"
                    android:fontFamily="@font/iran_sans_medium"
                    android:textColor="@color/colorBlack"
                    android:text="تیم تولید"
                    android:textSize="@dimen/dimen_sp_small"
                    app:layout_constraintRight_toLeftOf="@id/image_about_team"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_very_large"
                android:padding="@dimen/dimen_dp_tiny">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_exit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dimen_dp_very_very_huge"
                    android:src="@drawable/ic_exit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_view_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_dp_medium"
                    android:fontFamily="@font/iran_sans_medium"
                    android:text="@string/text_exit_account"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/dimen_sp_small"
                    app:layout_constraintRight_toLeftOf="@id/image_exit"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

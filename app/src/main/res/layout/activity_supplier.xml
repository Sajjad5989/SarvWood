<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_select_sheet"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/size_12_dp"
        app:srcCompat="@drawable/accept_order"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_select_sheet"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/size_14_dp"
        android:textSize="@dimen/size_10_dp"
        android:fontFamily="@font/iran_sans"
        android:textColor="@color/color_red"
        android:text="با انتخاب استفاده از ورق کارگاه، سفارش شما، سریعتر آماده خواهد شد."/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_workshop_sarv"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/dimen_dp_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_22_dp"
        android:layout_marginTop="@dimen/size_250_dp"
        android:layout_marginEnd="@dimen/size_22_dp"
        android:background="@drawable/button_style_green"
        android:fontFamily="@font/iran_sans_bold"
        android:text="استفاده از ورق کارگاه"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dimen_sp_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_own_sarv"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/dimen_dp_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_22_dp"
        android:layout_marginTop="@dimen/size_20_dp"
        android:layout_marginEnd="@dimen/size_22_dp"
        android:background="@drawable/text_green_border_style"
        android:fontFamily="@font/iran_sans"
        android:text="ارسال ورق توسط خودم"
        android:textColor="@color/color_green"
        android:textSize="@dimen/dimen_sp_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_workshop_sarv" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_sarv"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/dimen_dp_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_22_dp"
        android:layout_marginTop="@dimen/size_20_dp"
        android:layout_marginEnd="@dimen/size_22_dp"
        android:background="@drawable/const_border_light"
        android:fontFamily="@font/iran_sans"
        android:text="لغو سفارش"
        android:textColor="@color/colorBlackStep_1"

        android:textSize="@dimen/dimen_sp_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_own_sarv" />

</androidx.constraintlayout.widget.ConstraintLayout>

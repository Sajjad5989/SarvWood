<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme" parent="ParentMaterialTheme" />

    <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >
    </style>


    <style name="image_style_for_mic_in_constraint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_dp_tiny</item>
        <item name="android:padding">@dimen/dimen_dp_tiny</item>
    </style>

    <style name="MyToolbar" parent="">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >
    </style>

    <style name="MyToolbar.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >
    </style>

    <style name="MyToolbar.Subtitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/dimen_sp_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >

    </style>

    <style name="MaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
